<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:background="@drawable/clr"
    android:orientation="vertical"
    >

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:orientation="vertical"
       >



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sharp_salon_academy"
            android:textSize="45sp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#ADEFD8"
            android:fontFamily="cursive"

            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="282dp"
                android:layout_height="215dp"
                android:layout_gravity="center"



                android:src="@drawable/girl1"
                android:id="@+id/photo"
                android:layout_marginTop="70dp"
                >

            </de.hdodenhof.circleimageview.CircleImageView>

            </LinearLayout>




        <EditText
            android:id="@+id/loginPageUsernsme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:hint="username"
            android:autofillHints="emailAddress"
            android:textColorHint="#F4F4F4"
            android:gravity="center"
            android:inputType="text"

            android:textColor="#0AF6EE"
            android:textStyle="bold"
            android:textSize="20sp"
            android:background="@drawable/home_design"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:padding="13dp"
            android:drawableLeft="@drawable/uname"


            />

        <EditText
            android:id="@+id/loginPagePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:autofillHints="password"
            android:background="@drawable/home_design"
            android:gravity="center"

            android:hint="@string/password"
            android:inputType="textPassword"
            android:padding="13dp"
            android:textColor="#0AF6EE"
            android:textColorHint="#F4F4F4"
            android:textSize="20sp"
            android:textStyle="bold"

            android:drawableStart="@drawable/lock"




            />

        <Button
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="45dp"
            android:text="login"
            android:textColor="#FDFDFD"
            android:backgroundTint="#FBF8F8"
            />


        <TextView
            android:id="@+id/tv_Newuser"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="45dp"
            android:text="Register New user"
            android:textColor="#F4F4F4"
            android:gravity="center"/>


    </LinearLayout>
</ScrollView>

</LinearLayout>